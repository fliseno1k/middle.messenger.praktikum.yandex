{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"prettier",
		"standard-with-typescript",
		"plugin:@typescript-eslint/recommended",
		"plugin:@typescript-eslint/recommended-requiring-type-checking"
	],
	"plugins": ["prettier"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"parser": "@typescript-eslint/parser",
	"rules": {
		"prettier/prettier": 2,
		"semi": ["error", "always"],
		"eol-last": ["error", "always"]
	}
}
