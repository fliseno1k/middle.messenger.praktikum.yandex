{{#>auth-form heading="Войдите, чтобы продолжить!" withFields=true}}
    {{#*inline "fields"}}
        {{> input id="email" name="email" type="text" placeholder="" label="Почта" }}
        {{> input id="login" name="login" type="text" placeholder="" label="Логин" }}
        {{> input id="first_name" name="first_name" type="text" placeholder="" label="Имя" }}
        {{> input id="second_name" name="second_name" type="text" placeholder="" label="Фамилия" }}
        {{> input id="phone" name="phone" type="text" placeholder="" label="Телефон" }}
        {{> input id="password" name="password" type="password" placeholder="" label="Пароль" }}
        {{> input id="password" name="repeat_password" type="password" placeholder="" label="Повторите пароль" }}
    {{/inline}}
    {{#*inline "controls"}}
        {{> button type="submit" text="Зарегестрироваться" variant="filled" }}
        {{> button link="true" href="/signin" text="Есть аккаунт?" variant="transparent" }}
    {{/inline}}
{{/auth-form}}